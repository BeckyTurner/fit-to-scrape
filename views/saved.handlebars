<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Craigslist Scraper</a>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/">Home</a>
      <a class="nav-item nav-link" href="/saved">Saved Links</a>
    </div>
  </div>
</nav>

<div class="container">
  <h3>Saved Links</h3>
  {{#each articles}}
  <div class="card bg-light mb-3">
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <a href="{{link}}" class="card-link" target="_blank">View Link on Craigslist</a>
      <p class="card-text">{{intro}}</p>
      <a data-articleId={{_id}} class="btn btn-primary delete-btn">Delete</a>
      <a data-articleId={{_id}} class="btn btn-primary note-modal-btn" data-toggle="modal">Add Note</a>
    </div>
  </div>
  {{/each}}
</div>


<div id="add-note-modal" class="modal" tabindex="-1" role="dialog" data-articleId="">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="note-modal-title" class="modal-title"></h5>
      </div>
      <div class="modal-body container">
        <ul class="notes-list">
        </ul>
        <div class="form-group">
          <label for="note-area">New Note</label>
          <textarea name="new-note-area" class="form-control" id="note-body" rows="2" required></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary note-save-btn" data-dismiss="modal">Save</button>
        </div>
      </div>
    </div>
  </div>