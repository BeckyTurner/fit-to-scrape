<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Craigslist Scraper</a>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/">Home</a>
      <a class="nav-item nav-link" href="/saved">Saved Links</a>
      <a class="btn scrape-new">Get New Links</a>
    </div>
  </div>
</nav>

<div class="container article-container">
  <h3>Links</h3>
  {{#each articles}}
  <div class="card bg-light mb-3">
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <a href="{{link}}" class="card-link" target="_blank">View Link on Craigslist</a>
      <p class="card-text">{{intro}}</p>
      <a data-articleId="{{_id}}" class="btn btn-primary save-btn">Save Link</a>
    </div>
  </div>
  {{/each}}
</div>